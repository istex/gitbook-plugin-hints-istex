{
    "name": "gitbook-plugin-hints-istex",
    "description": "Defines four types of styled hint blocks: info, danger, tip, working.",
    "main": "index.js",
    "version": "1.0.0",
    "engines": {
        "gitbook": ">2.x.x"
    },
    "license": "Apache 2.0",
    "homepage": "https://github.com/thomas88100/gitbook-plugin-hints-istex",
    "repository": {
        "type": "git",
        "url": "https://github.com/thomas88100/gitbook-plugin-hints-istex.git"
    },
    "gitbook": {
        "properties": {
            "info": {
                "type": "string",
                "title": "CSS class for the 'info' icons",
                "default": "fas fa-info-circle"
            },
            "success": {
                "type": "string",
                "title": "CSS class for the 'tip' icons",
                "default": "fas fa-check-circle"
            },
            "danger": {
                "type": "string",
                "title": "CSS class for the 'danger' icons",
                "default": "fas fa-exclamation-triangle"
            },
            "warning": {
                "type": "string",
                "title": "CSS class for the 'working' icons",
                "default": "fas fa-exclamation-circle"
            }
        }
    }
}
